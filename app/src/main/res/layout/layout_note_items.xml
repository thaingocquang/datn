<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="@dimen/small_spacing"
    tools:background="?attr/colorPrimaryVariant">

    <TextView
        android:id="@+id/text_note_title_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text_size"
        tools:text="Title" />

    <TextView
        android:id="@+id/text_note_description_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_note_title_output"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/medium_text_size"
        tools:text="my long description" />

    <TextView
        android:id="@+id/text_note_time_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_note_description_output"
        android:gravity="end"
        android:textColor="@color/grey"
        android:textSize="@dimen/small_text_size"
        tools:text="May 15  5 2022" />
</RelativeLayout>